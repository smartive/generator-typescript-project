{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": <% if(type === 'library') { %>false<% } else { %>true<% } %>,
        "outDir": "../build",
        "rootDir": "../src",
        "declaration": <% if(type === 'library') { %>true<% } else { %>false<% } %>,
        "sourceMap": false,
        "importHelpers": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "es2018"
        ]
    },
    "include": [
        "../src/**/*"
    ],
    "exclude": []
}
